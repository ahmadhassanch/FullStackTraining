{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "charms-lib": [
        "dist/charms-lib"
      ],
      "@dialogs/*": [
        "projects/charms-portal/src/app/dialogs/*"
      ],
      "@shared/*": [
        "projects/charms-portal/src/app/shared/*"
      ],
      "@app/*": [
        "projects/charms-portal/src/app/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}